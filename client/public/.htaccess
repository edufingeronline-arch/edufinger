<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  # Keep direct access to existing files
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  # For a SPA, route everything else to index.html
  RewriteRule . /index.html [L]
</IfModule>

